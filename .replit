modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot Server"

[[workflows.workflow]]
name = "Telegram Bot Server"
author = "agent"

[[workflows.workflow.tasks]]
